{
  "name": "banking-demo",
  "version": "1.0.0",
  "description": "Demo banking app showing Splunk vs OpenTelemetry monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "demo": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ]
  },
  "keywords": [
    "banking",
    "demo",
    "splunk",
    "opentelemetry"
  ],
  "author": "Demo",
  "license": "MIT"
}
